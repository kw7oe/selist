<div class = "grid-item">
  <div class = "box box-panel" id = "<%= dom_id(subject) %>">  
    <div class = "header blue-header with_hover">        
      <h1><%= link_to subject.title, subject_path(subject) %></h1>
      <%= render "subjects/settings", subject: subject %>
    </div>
    
    <div class = "section">
      <!-- Unhidden List -->
      <% if current_user.is_teacher? %>
        <h2 class = "green">List(s)</h2>
      <% end %>
      <%= render "lists/unhidden_list", subject: subject, add_task: false %>
      
      <!-- Hidden List -->
      <% if current_user.is_teacher? %>
      <hr>
        <h2 class = "red">Hidden List(s)</h2>
        <%= render "lists/hidden_list", subject: subject, add_task: false %>
      <% end %>
    </div>
  </div>
</div>