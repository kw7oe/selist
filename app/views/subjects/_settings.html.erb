<% if current_user.is_teacher? %>
  <div class = "settings">
    <a class = "icon gear-settings-link" data-behavior="toggle_settings"></a>
    <ul class = "dropdown-menu">
      <li><%= link_to "Add List", new_subject_list_path(subject) %></li>
      <li><%= link_to "Edit Subject", edit_subject_path(subject) %></li>
      <li><%= link_to "Delete Subject", subject_path(subject), method: :delete, remote: true, data: { confirm: "Are you sure?" } %></li>
    </ul>
  </div>
<% end %>