<div class = "col-5 margin-3.5 box box-panel single-box">

  <!-- Name -->
  <div class = "header blue-header">
    <% if @user.name? %>
      <h1><%= @user.name %></h1>
    <% else %>
      <p>Name unavailable, 
      <%= link_to "Edit your profile here", edit_user_path(current_user) %>
      </p>
    <% end %>
    <%= render "settings" %>
  </div>

  <div class = "section">
  <h2>Subjects: </h2>
  <% if @user.subjects.any? %>
    <ul class = "subjects">
      <% @user.subjects.each do |subject| %>
        <li><%= subject.title %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No subject available.</p>
  <% end %>
  </div>

</div>
 