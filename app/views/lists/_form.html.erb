<%= form_for [@subject, @list] do |f| %>

  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2 class = "alert alert-alert">Form is invalid</h2>
      <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class = "form-group">
    <%= f.check_box :is_hidden %>    
    <%= f.label :is_hidden, "Hide from students" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn" %>
  </div>

<% end %>