<% if current_user.is_teacher? %>
  <div class = "settings">
    <a class = "icon gear-settings-link" data-behavior="toggle_settings"></a>
    <ul class = "dropdown-menu">
      <li><%= link_to "Edit Task", edit_subject_list_task_path(subject,list, task) %></li>
      <li><%= link_to "Delete Task", subject_list_task_path(subject, list, task), method: :delete, data: { confirm: "You are about to delete this task (#{task.title}). Are you sure?"} %></li>
    </ul>
  </div>
<% end %>